<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/memberRelativeLayoutId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".HomeMemberFragment">

            <fragment
                android:id="@+id/memberMap"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </RelativeLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnServicesM">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/routeFab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:contentDescription="Route Button"
                app:srcCompat="@drawable/ic_baseline_directions_24" />


        </FrameLayout>

        <SearchView
            android:id="@+id/search_m"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"
            android:iconifiedByDefault="false"
            android:queryHint="Search Here"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8">

        </SearchView>


        <Button
            android:id="@+id/btnEventM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Events"
            android:textColor="#000000"
            app:cornerRadius="40dp"
            app:layout_constraintStart_toStartOf="@+id/search_m"
            app:layout_constraintTop_toBottomOf="@+id/search_m"
            app:layout_constraintWidth_percent="0.3"
            app:strokeColor="#2962FF"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/btnFacilitiesM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Facilities"
            android:textColor="#000000"
            app:cornerRadius="40dp"
            app:layout_constraintEnd_toStartOf="@+id/btnServicesM"
            app:layout_constraintStart_toEndOf="@+id/btnEventM"
            app:layout_constraintTop_toBottomOf="@+id/search_m"
            app:layout_constraintWidth_min="114dp"
            app:strokeColor="#2962FF"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/btnServicesM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#FFFFFF"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Services"
            android:textColor="#000000"
            app:cornerRadius="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_m"
            app:layout_constraintWidth_min="106dp"
            app:layout_constraintWidth_percent="0.3"
            app:rippleColor="#FFFFFF"
            app:strokeColor="#2962FF"
            app:strokeWidth="1dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eventResultViewM"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="#00F1EEEE"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.9"
            tools:listitem="@layout/search_event_list" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>